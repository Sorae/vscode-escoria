{
    "name": "vscode-escoria",
    "displayName": "Escoria",
    "description": "Syntax highligh in VSCode for the Escoria language",
    "icon": "res/icon-128.png",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "escoria",
                "aliases": [
                    "Escoria",
                    "escoria",
                    "godot"
                ],
                "extensions": [
                    ".esc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "escoria",
                "scopeName": "source.escoria",
                "path": "./syntaxes/escoria.tmLanguage.json"
            }
        ]
    },
    "publisher": "sorae",
    "repository": {
        "type": "git",
        "url": "https://github.com/Sorae/vscode-escoria"
    }
}